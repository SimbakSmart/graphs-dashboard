<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LightColor">#fff</Color>
    <SolidColorBrush x:Key="LightColorBrush" Color="{StaticResource LightColor}" />

    <Color x:Key="ToggleMenuLinkBackGroundColor">#0069c0</Color>
    <SolidColorBrush x:Key="ToggleMenuLinkBackGroundColorBrush" Color="{StaticResource ToggleMenuLinkBackGroundColor}" />

    <Color x:Key="BackgroundModalColor">#bfbbbb</Color>
    <SolidColorBrush x:Key="BackgroundModalColorBrush" Color="{StaticResource BackgroundModalColor}" />


</ResourceDictionary>